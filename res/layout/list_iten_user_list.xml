<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80.0px" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100.0px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true" >

        <ImageView
            android:id="@+id/list_iten_user_list_img_head_pic"
            android:layout_width="80.0px"
            android:layout_height="80.0px"
            android:layout_margin="5.0px"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@color/gray_simple"
            android:scaleType="centerCrop"
            android:src="@drawable/public_head_pic" >
        </ImageView>

        <TextView
            android:id="@+id/list_iten_user_list_txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="2.0px"
            android:text="11"
            android:layout_toRightOf="@+id/list_iten_user_list_img_head_pic"
            android:layout_alignTop="@+id/list_iten_user_list_img_head_pic"
            android:textColor="@android:color/black"
            android:textSize="18.0px" />
    </RelativeLayout>

</RelativeLayout>