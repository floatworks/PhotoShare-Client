<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@anim/public_list_iten_background" >

    <ImageView
        android:id="@+id/list_iten_comment_img_head_pic"
        android:layout_width="60.0px"
        android:layout_height="60.0px"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="10.0px"
        android:src="@drawable/public_head_pic" />

    <TextView
        android:id="@+id/list_iten_comment_txt_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/list_iten_comment_img_head_pic"
        android:layout_marginRight="10.0px"
        android:layout_toRightOf="@+id/list_iten_comment_img_head_pic"
        android:textColor="@android:color/black"
        android:textSize="22.0px"
        android:text="name:"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/list_iten_comment_txt_user_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/list_iten_comment_txt_user_name"
        android:layout_marginRight="10.0px"
        android:layout_toRightOf="@+id/list_iten_comment_txt_user_name"
        android:textColor="@android:color/black"
        android:text="comment"
        android:textSize="22.0px" />

    <TextView
        android:id="@+id/list_iten_comment_txt_comment_createtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/list_iten_comment_txt_user_comment"
        android:layout_margin="10.0px"
        android:singleLine="true"
        android:text="time"
        android:textColor="@color/gray_dark"
        android:textSize="18.0px" />

</RelativeLayout>