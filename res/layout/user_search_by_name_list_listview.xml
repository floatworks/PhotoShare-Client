<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100.0px"
    android:background="@anim/public_list_iten_background" >

     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80.0px"
        android:layout_centerVertical="true" >

        <ImageView
            android:id="@+id/user_search_by_name_list_img_usersrc"
            android:layout_width="80.0px"
            android:layout_height="80.0px"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:src="@drawable/public_head_pic" />

        <TextView
            android:id="@+id/user_search_by_name_list_textView__username"
            android:layout_width="wrap_content"
            android:layout_height="28.0px"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/user_search_by_name_list_img_usersrc"
            android:gravity="center_vertical"
            android:layout_marginLeft="8.0px"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="20.0px"
            android:textStyle="bold" />
        
    </RelativeLayout>
    
</RelativeLayout>